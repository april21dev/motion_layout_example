<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.april21dev.androidbase.view.MotionExView1
                android:id="@+id/motionExView1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="500dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <com.april21dev.androidbase.view.MotionExView2
                android:id="@+id/motionExView2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="500dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/motionExView1" />

        <com.april21dev.androidbase.view.MotionExView3
                android:id="@+id/motionExView3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="500dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/motionExView2" />

        <com.april21dev.androidbase.view.MotionExView4
                android:id="@+id/motionExView4"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="500dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/motionExView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

